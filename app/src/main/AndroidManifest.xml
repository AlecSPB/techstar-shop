<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dglproject.brand">

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.dglproject.brand.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.dglproject.brand.activity.ActivitySplashScreen"
            android:theme="@style/AppFullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dglproject.brand.activity.ActivityUserSettings"
            android:label="@string/title_activity_settings" />
        <activity
            android:name="com.dglproject.brand.activity.ActivityHelp"
            android:label="@string/title_activity_help"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.dglproject.brand.activity.ActivityCompany"
            android:label="@string/title_activity_company"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.dglproject.brand.activity.ActivityDepartment"
            android:label="@string/title_activity_department"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.dglproject.brand.activity.ActivityProductDetail"
            android:label="@string/title_activity_product_detail"
            android:theme="@style/AppTheme.NoActionBarGreen" />
        <activity
            android:name="com.dglproject.brand.activity.ActivityUserProfile"
            android:label="@string/title_activity_user_profile"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.dglproject.brand.activity.ActivityCategory"
            android:label="@string/title_activity_category"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.dglproject.brand.activity.ActivityOrder"
            android:label="@string/title_activity_card"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.dglproject.brand.activity.ActivityProductList" />
        <activity android:name="com.dglproject.brand.activity.ActivityCart" />
        <activity android:name="com.dglproject.brand.activity.ActivityCheckout" />
        <activity
            android:name="com.dglproject.brand.activity.ActivityLogin"
            android:theme="@style/AppAuth" />
        <activity
            android:name="com.dglproject.brand.activity.ActivitySignup"
            android:theme="@style/AppAuth" />
        <activity android:name="com.dglproject.brand.activity.ActivitySettings" />

        <provider
            android:name="com.dglproject.brand.database.HistoryProvider"
            android:authorities="com.dglproject.brand"
            android:exported="false"
            android:protectionLevel="signature"
            android:syncable="true" />

        <activity
            android:name="com.dglproject.brand.activity.ActivityWelcome"
            android:theme="@style/AppFullScreen" />
        <activity android:name="com.dglproject.brand.activity.ActivityProductAdd" />
        <activity android:name="com.dglproject.brand.activity.ActivityAbout" />
        <activity android:name="com.dglproject.brand.activity.ActivityCartEdit" />
        <activity android:name="com.dglproject.brand.activity.ActivityBrandAdd" />
        <activity
            android:name="com.dglproject.brand.activity.ActivitySearch"
            android:theme="@style/AppTheme.NoActionBarGreen" >

        </activity>
    </application>

</manifest>